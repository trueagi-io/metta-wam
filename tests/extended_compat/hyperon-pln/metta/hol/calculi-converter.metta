;; Convert a MeTTa expression to lambda calculus
(: mt2lc (-> Atom Atom))
(= (mt2lc $expr)
   (if (is-variable $expr)
       $expr
       (case $expr
         (((LET $x $y $f) ((Œª $x (mt2lc $f)) (mt2lc $y)))  ; Let
          (($f $x) ((mt2lc $f) (mt2lc $x)))                ; Application
          ($s $s)))))                                      ; Symbol

